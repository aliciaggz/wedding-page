---
import { getLocale, t , getLangFromUrl } from '@/utils/i18n';
import Houses from '@/assets/travel1.svg';
import Stamp from '@/components/atoms/Stamp.astro';
const lang = getLangFromUrl(Astro.url);
const locale = getLocale(lang);
import Plane from '@/assets/plane.svg';
import City from '@/assets/city.svg'; 
import Sun from '@/assets/sun-w.svg';
import Accomodation from '@/assets/accommodation.svg';
import Lemon from '@/assets/lemon.svg';
import Plate from '@/assets/plate.svg';

const stamps = [
  {
    title: "airports",
    icon: Plane,
    target: "airports"
  },
  {
    title: "accomodation",
    icon: Accomodation,
    target: "accomodation"
  } ,
  {
    title: "getting around",
    icon: City,
    target: "getting-around"
  },
  {
    title: "weather",
    icon: Sun,
    target: "weather"
  },
  {
    title: "travel tips",
    icon: Plate,
    target: "travel-tips"
  } ,
  {
    title: "explore Murcia",
    icon: Lemon,
    target: "explore-murcia"
  } 
];

---

<div class="intro-travel">
  <Houses class="intro-travel__icon"/>
  <h2 class="title-cormorant-h2">{t(locale, "travel.title")}</h2>
  <h3 class="subtitle-dancing-h3">{t(locale, "travel.subtitle")}</h3>
  <div class="intro-travel__grid">
    {stamps.map((stamp:any) => (
      <Stamp 
        title={stamp.title} icon={stamp.icon} target={stamp.target}/>
    ))}
  </div>
</div>
<style lang="scss">
.intro-travel {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  // margin-top: 3rem;

  &__icon {
    // width: 150px;
    // height: auto;
    margin-top: 3rem;
    margin-bottom: 3rem;
  }

  &__text {
    font-family: $font-cormorant;
    font-weight: bold;
    font-size: $font-size-md;
    color: $color-red;
    margin-bottom: 5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

  }

  &__grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 2rem;
    width: 100%;
    max-width: 800px;
  }

}

</style>