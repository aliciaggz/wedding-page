---
import { getLocale, t , getLangFromUrl } from '@/utils/i18n';
import Houses from '@/assets/travel1.svg';
import Stamp from '@/components/atoms/Stamp.astro';
const lang = getLangFromUrl(Astro.url);
const locale = getLocale(lang);
import Plane from '@/assets/plane.svg';

const stamps = [
  {
    title: "airports",
    icon: Plane,
  },
  {
    title: "accomodation",
    icon: Plane,
  } ,
  {
    title: "getting around",
    icon: Plane,
  },
  {
    title: "weather",
    icon: Plane,
  },
  {
    title: "travel tips",
    icon: Plane,
  } ,
  {
    title: "explore Murcia",
    icon: Plane,
  } 
];

---

<div class="intro-travel">
  <Houses/>
  <h2 class="title-cormorant-h2">{t(locale, "travel.title")}</h2>
  <h3 class="subtitle-dancing-h3">{t(locale, "travel.subtitle")}</h3>
  <div class="intro-travel__grid">
    {stamps.map((stamp:any) => (
      <Stamp 
        title={stamp.title} icon={stamp.icon} />
    ))}
  </div>
</div>
<style lang="scss">
.intro-travel {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  // margin-top: 3rem;

  &__text {
    font-family: $font-cormorant;
    font-weight: bold;
    font-size: $font-size-md;
    color: $color-red;
    margin-bottom: 5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

  }

  &__grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 2rem;
    width: 100%;
    max-width: 800px;
  }

}

</style>