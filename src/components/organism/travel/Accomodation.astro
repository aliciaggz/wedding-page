---
import { getLocale, t , getLangFromUrl } from '@/utils/i18n';
import Accommodotion from '@/assets/accommodation.svg';
import HotelCard from '@/components/molecules/HotelCard.astro';
import City from "@/assets/city.svg";

const lang = getLangFromUrl(Astro.url);
const locale = getLocale(lang);

---

<div class="accomodation" id="accomodation">
  <Accommodotion class="accomodation__icon"/>
  <h2 class="title-cormorant-h2">{t(locale, "travel.accommodation.title")}</h2>
  <h3 class="subtitle-dancing-h3">{t(locale, "travel.accommodation.subtitle")}</h3>
  <div class="accomodation__text">
    <p>{t(locale, "travel.accommodation.paragraph1")}</p>
    <p>{t(locale, "travel.accommodation.paragraph2")}</p>
  </div>
  <HotelCard hotelName="Barcelo Murcia Siete Coronas"/>


  <City class="accomodation__icon"/>

</div>
<style lang="scss">
.accomodation {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  margin-top: 3rem;

  &__icon {
    color: $color-red;
    margin-bottom: 2rem;
  }

  &__text {
    font-family: $font-cormorant;
    font-size: $font-size-base;
    margin-bottom: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

  }

  &__icon{
   color: $color-red;
  }


}

</style>