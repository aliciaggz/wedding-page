---
import { getLocale, t , getLangFromUrl } from '@/utils/i18n';
import Accommodotion from '@/assets/accommodation.svg';
import HotelCard from '@/components/molecules/HotelCard.astro';
import City from "@/assets/city.svg";

const lang = getLangFromUrl(Astro.url);
const locale = getLocale(lang);

---

<div class="around">
  <h2 class="title-cormorant-h2">{t(locale, "travel.around.title")}</h2>
  <h3 class="subtitle-dancing-h3">{t(locale, "travel.around.subtitle")}</h3>
</div>
<style lang="scss">
.around {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  margin-top: 3rem;

  &__text {
    font-family: $font-cormorant;
    font-weight: bold;
    font-size: $font-size-md;
    color: $color-red;
    margin-bottom: 5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

  }


}

</style>