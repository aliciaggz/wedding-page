    font-weight: bold;
    font-size: $font-size-md;
    color: $color-red;
    margin-bottom: 5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

  }

  &__transport-list {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    width: 100%;
    margin-top: 3rem;
  }

  &__transport-item {
  display: flex;
  flex-direction: column;
  // align-items: center;
  gap: 2rem;
  padding: 1rem;
  text-align: left;
  justify-content: center;

  &__header{
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  // &__icon {
