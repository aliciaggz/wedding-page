  // }

  &__content {
    font-family: $font-cormorant;
    font-size: $font-size-base;
    // max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  &__title {
    font-family: $font-cormorant;
    font-weight: bold;
    font-size: $font-size-lg;
