---
import { getLocale, t , getLangFromUrl } from '@/utils/i18n';
import Airplane from '@/assets/plane.svg';
import AirportsAccordion from '@/components/molecules/AirportsAccordion.vue';
const lang = getLangFromUrl(Astro.url);
const locale = getLocale(lang);

---

<div class="airports" id="airports">
  <Airplane class="airports__icon"/>
  <h2 class="title-cormorant-h2">{t(locale, "travel.airports.title")}</h2>
  <h3 class="subtitle-dancing-h3">{t(locale, "travel.airports.subtitle")}</h3>
  <AirportsAccordion client:load/>
</div>
<style lang="scss">
.airports {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  margin-top: 3rem;

  &__text {
    font-family: $font-cormorant;
    font-weight: bold;
    font-size: $font-size-md;
    color: $color-red;
    margin-bottom: 5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  &__icon{
   color: $color-red;
  }

}

</style>