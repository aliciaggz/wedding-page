  padding: 2rem;
  margin-top: 3rem;

  &__text {
    font-family: $font-cormorant;
    font-size: $font-size-base;
    font-weight: 200;
    color: $color-text;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

  }

