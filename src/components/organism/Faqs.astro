---
import Timeline from '@/components/atoms/Timeline.vue';
import { Image } from 'astro:assets';
import FaqsBox from '@/components/molecules/FaqsBox.vue';
import alexMaria04 from '@/assets/alex-maria04.jpg';
---
<section class="faqs">
  <figure class="faqs__figure">
    <Image src={alexMaria04} alt="Maria and Alex" />
  </figure>
  <FaqsBox client:load/>
</section>

<style lang="scss" scoped>
.faqs {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  margin-top: 3rem;
  margin-bottom: 10rem;


  &__button {
    margin-bottom: 5rem;
    width: 9rem;
  }

  &__marco {
    width: 100%;
    max-width: 32rem;
    height: auto;
  }

  &__figure {
    width: 100%;
    max-width: 32rem;

    & img {
      display: block;
      width: 100%;
      max-width: 100%;
      height: auto;
      border: 1rem solid $color-white; border-width: 1rem 1rem 1.5rem 1rem;
      transform: rotate(5deg);
      box-shadow: 4px 4px 12px 0px rgba(0,0,0,0.25);;

    }
  }

  &__festin {
    margin-top: 4rem;
    width: 100%;
    max-width: 32rem;
    height: auto;
    margin-bottom: 7rem;
  }

  &__button{
    width: 15rem;
  }

  @media (min-width: 720px) {
    max-width: 80%;
    padding-inline: 0;
    padding-block: 4rem;
    margin: auto;
  } 

}
</style>