---
import LanguagePicker from '@/components/atoms/LanguagePicker.vue'
import { languages, getLangFromUrl } from '@/utils/i18n';
const pathname = new URL(Astro.request.url).pathname;
// Limpiamos el idioma del pathname si fuera necesario
const currentRelativePath = pathname.replace(/^\/(es|en)/, '') || '/';
const lang = getLangFromUrl(Astro.url);
---

    <header class="header">
      <LanguagePicker isWhite currentPath={currentRelativePath} languages={languages} lang={lang} />
    </header>

  <style lang="scss" scoped>
  .header {
    height: 10vh;
    position: absolute;
    background: transparent;
    z-index: 1001;
    margin-inline: 2rem;
  
  
    &__content {
      width: 100%;
      height: 100%;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 1.5rem;
    }
  
    &__link {
      cursor: pointer;
    }
  
    &__logo {
      position: absolute; // posición absoluta dentro del header
      left: 50%; // centro horizontal del header
      top: 100%; // centro vertical
      transform: translate(-50%, -50%); // ajusta para que el centro del logo quede en el centro del header
      width: 6rem;
      height: auto;
      z-index: 1002; // asegúrate que el logo esté por encima también
    }
  
    @media (min-width: 720px) {
      &__content {
        padding: 2rem 1.5rem 0 4rem;
      }
    }
  }
  </style>