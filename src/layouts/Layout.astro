---
import Header from '@/components/molecules/Header.vue';
import { getLocale, t , languages, useTranslatedPath, getLangFromUrl } from '@/utils/i18n';
import Hero from '@/components/molecules/Hero.astro';
import bgImage from "../assets/alex-maria01.jpeg";


const lang = getLangFromUrl(Astro.url);
// const lang = ge∫tLangFromUrl(Astro.url);

const locale = getLocale(lang);
const translatePath = useTranslatedPath(lang);
const path = Astro.url.pathname;




let heroData = {
  title: "Maria & Alex",
  subtitle: "30.05.2026",
  image: bgImage.src
};

console.log("Current path:", path);

if (path === "/") {
  heroData = {
    title: "Inicio",
    subtitle: "Bienvenido a la web",
    image: bgImage.src
  };
} else if (path.startsWith("/servicios")) {
  heroData = {
    title: "Nuestros Servicios",
    subtitle: "Lo que hacemos mejor",
    image: bgImage.src
  };
} else if (path.startsWith("/contacto")) {
  heroData = {
    title: "Contáctanos",
    subtitle: "Estamos aquí para ayudarte",
    image: bgImage.src
  };
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="" />
		<link rel="stylesheet" href="/src/styles/global.scss" />
		<meta name="generator" content={Astro.generator} />
		<title>A&M 30.05.2025</title>
	</head>
	<body>
		<Header languages={languages} lang={lang} logo="/src/assets/logoam.png" client:load/>
		<Hero {...heroData} />
		<main>
		<slot />
		</main>
	</body>
</html>

